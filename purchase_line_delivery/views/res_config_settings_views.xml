<?xml version="1.0"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.carrier</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Purchase Carrier</span>
                        <div class="text-muted">
                            Default Purchase Carrier
                        </div>
                        <div class="text-muted">
                            <field name="po_carrier_id"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
