<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="stock_shelf_products_tree_view">
        <field name="name">stock.shelf.products.tree</field>
        <field name="model">stock.shelf.products</field>
        <field name="arch" type="xml">
            <tree string="Stock Shelf Products">
                <field name="shelf_id"/>
                <field name="product_id"/>
                <field name="categ_id"/>
                <field name="product_type"/>
                <field name="location_qty"/>
                <field name="uom_id"/>
                <field name="location_id"/>
                <field name="deprecated"/>
                <field name="active"/>
                <field name="default_code" invisible="1"/>
                <field name="product_name" invisible="1"/>
                <field name="barcode" invisible="1"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_shelf_products_search_view">
        <field name="name">stock.shelf.products.search</field>
        <field name="model">stock.shelf.products</field>
        <field name="arch" type="xml">
            <search string="Shelf Products">
                <field name="product_name" string="Product" filter_domain="['|','|',('default_code','ilike',self),('product_name','ilike',self),('barcode','ilike',self)]"/>
                <field name="categ_id" filter_domain="[('categ_id', 'child_of', raw_value)]"/>
                <field name="shelf_id" filter_domain="[('shelf_id', 'ilike', raw_value)]"/>
                <filter string="Stockable" name="services" domain="[('product_type','=','product')]"/>
                <separator/>
                <filter string="Shelved" name="shelved" domain="[('shelf_id','!=',False)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand='0' string='Group by...'>
                    <filter string='Shelf' domain="[]" context="{'group_by' : 'shelf_id'}"/>
                    <filter string='Location' domain="[]" context="{'group_by' : 'location_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="stock_shelf_products_action" model="ir.actions.act_window">
        <field name="name">Shelf Products</field>
        <field name="res_model">stock.shelf.products</field>
        <field name="domain">['|', ('active', '=', True), ('active', '=', False)]</field>
        <field name="view_id" ref="stock_shelf_products_tree_view"/>
        <field name="search_view_id" ref="stock_shelf_products_search_view"/>
    </record>

    <menuitem id="stock_shelf_products_menu"
        name="Stock Shelf Products"
        sequence="250"
        action="stock_shelf_products_action"
        parent="stock.menu_warehouse_report"
        groups="stock.group_stock_user"/>

</odoo>
