<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="transfer_slip" inherit_id="azi_stock.transfer_slip">
        <xpath expr="//div[@name='destination']" position="after">
            <div>
                <strong>Shelf Location: </strong>
                <span t-foreach="o.product_id.shelf_ids" t-as="loc">
                    <span t-field="loc.name"/>,
                </span>
            </div>
        </xpath>
    </template>
</odoo>