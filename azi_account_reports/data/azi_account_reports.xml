            <field name="code">AZPL_COGF</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="parent_id" ref='account_financial_report_cost_sales1'/>
            <field name="domain"
                   eval="[('account_id.user_type_id', '=', ref('azi_account_reports.account_type_cogs_freight'))]"/>
            <field name="groupby">account_id</field>
            <field name="sequence" eval="4"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="6"/>
        </record>
        <record id="account_financial_report_cost_sales_other1" model="account.financial.html.report.line">
            <field name="name">COGS Other</field>
            <field name="code">AZPL_COGS</field>
            <field name="formulas">balance = sum.balance</field>
            <field name="parent_id" ref='account_financial_report_cost_sales1'/>
            <field name="domain"
                   eval="[('account_id.user_type_id', '=', ref('account.data_account_type_direct_costs'))]"/>
            <field name="groupby">account_id</field>
            <field name="sequence" eval="5"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="6"/>
        </record>

        <record id="account_financial_report_expenses_sm1" model="account.financial.html.report.line">
            <field name="name">Sales and Marketing Expenses</field>
            <field name="code">AZPL_EXPSM</field>
            <field name="formulas">balance = AZPL_SFEXP.balance + AZPL_SVEXP.balance + AZPL_SWEXP.balance + AZPL_SOEXP.balance + AZPL_STEXP.balance + AZPL_SMEXP.balance + AZPL_SMOTHER.balance</field>
            <field name="parent_id" ref='account_financial_report_net_operating_income1'/>
            <field name="sequence" eval="2"/>
            <field name="green_on_positive" eval="False"/>
            <field name="level" eval="4"/>
        </record>
